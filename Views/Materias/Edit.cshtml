@model RegistroAlumnos.mat_materia
@{
    ViewBag.Title = "Edit";
}

<h2>Editar Materia</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.mat_id)

        <div class=" form-group">
            @Html.LabelFor(model => model.mat_nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.mat_nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mat_nombre, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
