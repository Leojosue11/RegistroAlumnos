@{
    ViewBag.Title = "Materias Por Grado";
}

<h2>@ViewBag.title</h2>
<div class="row">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Nuevo", "Create")
        </p>

        <table class="table">
            <tr>
                <th> Id </th>
                <th> Grado </th>
                <th> Materia </th>

            </tr>
            @foreach (var Item in Model)
            {
                <tr>
                    <td> @Item.mxg_id</td>
                    <td> @Item.mxg_id_grd</td>
                    <td> @Item.mxg_id_mat</td>

                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = Item.mxg_id }),
                        @Html.ActionLink("Eliminar", "Delete", new { id = Item.mxg_id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
